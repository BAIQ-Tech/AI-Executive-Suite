# Copy this file to .env and update with your actual values

# Basic Flask Configuration
SECRET_KEY=your-secret-key-here
DEBUG=true
HOST=0.0.0.0
PORT=5000
WORKERS=4

# Database Configuration
DATABASE_URL=sqlite:///ai_executive_suite.db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECT_TIMEOUT=5

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3

# Vector Database Configuration
VECTOR_DB_PROVIDER=chromadb
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=8000
VECTOR_DB_COLLECTION=ai_executive_docs
EMBEDDING_MODEL=text-embedding-ada-002

# File Storage Configuration
FILE_STORAGE_PROVIDER=local
FILE_STORAGE_LOCAL_PATH=./uploads
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1
MAX_FILE_SIZE=50000000

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-here
JWT_EXPIRATION_HOURS=24
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=./logs/ai_executive_suite.log
LOG_MAX_FILE_SIZE=10000000
LOG_BACKUP_COUNT=5

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_TRACKING=true

# External Integration Configuration
CRM_INTEGRATION_ENABLED=false
CRM_API_KEY=your-crm-api-key
CRM_BASE_URL=https://api.your-crm.com

ERP_INTEGRATION_ENABLED=false
ERP_API_KEY=your-erp-api-key
ERP_BASE_URL=https://api.your-erp.com

FINANCIAL_DATA_ENABLED=false
FINANCIAL_API_KEY=your-financial-api-key

# Testing Configuration
TESTING=false

# Legacy OAuth Configuration (for backward compatibility)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
