FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    postgresql-client \
    cron \
    awscli \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy backup scripts
COPY scripts/backup/ ./scripts/
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir psycopg2-binary boto3 schedule

# Create backup user
RUN useradd -m -u 1000 backupuser && chown -R backupuser:backupuser /app
USER backupuser

# Create backup directories
RUN mkdir -p /app/backups /app/logs

# Set up cron for automated backups
COPY scripts/backup/crontab /tmp/crontab
USER root
RUN crontab -u backupuser /tmp/crontab
USER backupuser

# Start cron and backup service
CMD ["python", "scripts/backup_service.py"]